<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>com.gateway.try</groupId>
    <artifactId>try</artifactId>
    <packaging>pom</packaging>
    <version>1.0-SNAPSHOT</version>

    <!--<parent>-->
    <!--<artifactId>gateway-parent</artifactId>-->
    <!--<groupId>com.gateway</groupId>-->
    <!--<version>1.0-SNAPSHOT</version>-->
    <!--</parent>-->

    <parent>
        <groupId>org.springframework.boot</groupId>
        <artifactId>spring-boot-starter-parent</artifactId>
        <version>1.5.9.RELEASE</version>
    </parent>

    <modules>
        <module>project-module</module>
        <module>common-module</module>
        <module>service-a-module</module>
        <module>service-b-module</module>
        <module>common-web-module</module>
    </modules>

    <name>配置文件迁移demo</name>
    <description>瞎写写</description>
    <url>https://lipengcheng.men/</url>
    <developers>
        <developer>
            <name>lipengcheng1995</name>
        </developer>
    </developers>


    <properties>
        <!--依赖的版本号-->
        <spring.boot.version>1.5.9.RELEASE</spring.boot.version>

        <!--和配置文件有关的变量-->
        <code.pool.config>code</code.pool.config>
        <!--<code.pool.config>common-code,project-code</code.pool.config>-->
        <swagger.config>swagger</swagger.config>
    </properties>


    <dependencies>
    </dependencies>

    <profiles>
        <profile>
            <id>development</id>
            <properties>
                <profiles.active>development</profiles.active>
            </properties>
        </profile>
        <profile>
            <id>pre-release</id>
            <properties>
                <profiles.active>pre-release</profiles.active>
            </properties>
        </profile>
        <profile>
            <id>production</id>
            <properties>
                <profiles.active>production</profiles.active>
            </properties>
        </profile>

    </profiles>
    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.1</version>
                <configuration>
                    <source>1.8</source>
                    <target>1.8</target>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-war-plugin</artifactId>
                <version>3.2.0</version>
            </plugin>

            <plugin>
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-maven-plugin</artifactId>
            </plugin>
        </plugins>
    </build>
</project>